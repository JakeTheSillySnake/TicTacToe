@{
    ViewData["Title"] = "Tic-Tac-Toe";
}
@model TicTacToe.Web.Models.UserDAO

<div class="bg-white p-8 rounded-lg shadow-md max-w-md w-full field-grid">
    <strong><h4 class="text-center header">Profile</h4></strong>

    <div>
        <strong><label>UUID String</label></strong>
        <p>@Model.Uuid</p>
        <strong><label>Login</label></strong>
        <p>@Model.Login</p>
        <strong><label>Change Password</label></strong>
        @if (!Model.PasswordCorrect) {
            <p class="text-danger">Current password doesn't match.</p>
        }
        <form method="post">
            <label class="control-label">Current Password</label>
            <input name="CurrentPassword" id="CurrentPassword" type="password" class="form-control" required title="Must match the current password." />
            
            <label class="control-label">New Password</label>
            <input name="NewPassword" id="NewPassword" type="password" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must be at least 8 characters and contain at least one number, an uppercase and lowercase letter." required/>
            <div class="user-btns">
                <input type="submit" value="Save" class="btn-new mt-3 w-50"/>
                <a href="user/delete" class="btn-delete mt-3 w-50" onclick="return confirm('Delete profile?\nWarning: this action cannot be reversed.')">Delete</a>
            </div>
            <a class="btn-new d-block mt-1 bg-secondary" asp-area="" asp-controller="Auth" asp-action="Logout" onclick="return confirm('Would you like to sign out?')">Sign Out</a>
        </form>
    </div>
</div>