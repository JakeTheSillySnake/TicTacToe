@{
    ViewData["Title"] = "Tic-Tac-Toe";
}
@model TicTacToe.Data.GameBoardEntity

<div class="bg-white p-8 rounded-lg shadow-md max-w-md w-full field-grid">
    <div class="grid grid-cols-3 gap-4 text-center">
        @for (int i = 0; i < 3; i++) {
                @for (int j = 0; j < 3; j++) {
                    if (Model.field[i,j] == 1) {
                        <div class="square bg-gray-200" itemid="@i + @j">O</div>
                    } else if (Model.field[i,j] == 2) {
                        <div class="square bg-gray-200" itemid="@i + @j">X</div>
                    } else {
                        <div class="square bg-gray-200" itemid="@i + @j"></div>
                    }
                }
            }
    </div>
</div>
