@{
    ViewData["Title"] = "Tic-Tac-Toe";
}
@model IOrderedEnumerable<TicTacToe.Web.Models.CurrentGameDAO>

@foreach (var game in Model) 
{ 
    <div class="bg-white p-8 rounded-lg shadow-md w-full mx-auto mt-1 user-btns">
        <h6>@game.Uuid</h6>
        @if (game.PlayerO != "")
        {   
            <strong>Multiplayer</strong>
            @if (game.PlayerO == null)
            {
                <a href="/game/@game.Uuid/join">Join</a>
            }
            else
            { 
                <a href="/game/@game.Uuid">Continue</a>
            }
            
        }
        else 
        {   
            <strong>Solo</strong>
            <a href="/game/@game.Uuid">Continue</a>
        }
        <a href="/game/@game.Uuid/delete">Delete</a>
    </div>
}

@if (Model.Count() == 0)
{
    <div class="bg-white p-8 rounded-lg shadow-md w-full mx-auto mt-1">
       <h6 class="text-center">No games are available.</h6>
    </div>
}